function work_task_add_task($form, $form_state) {
 
  $form['#tree'] = TRUE;
  $form['#attributes']['enctype'] = 'multipart/form-data';

  $form['project'] = array(
    '#type' => 'hidden',
    '#value' => t('project'),
  );

  $form['task'] = array(
    '#title' => 'Task',
    '#type' => 'textfield',
  );

  $form['description'] = array(
    '#title' => 'Description',
    '#type' => 'textarea',
  );

  // --------------- Add more text box starts  ------------------------------

  $form['example_entry']['entry_fieldset'] = array(
    '#type' => 'fieldset',
    '#title' => t('Action Items'),
    '#prefix' => '<div id="entry-fieldset-wrapper">',
    '#suffix' => '</div>',
  );

  if (empty($form_state['num_items'])) {
    $form_state['num_items'] = 1;
  }

  for ($i = 0; $i < $form_state['num_items']; $i++) {

  $form['example_entry']['entry_fieldset']['action_items'][$i] = array(
    '#type' => 'textfield',
    '#attributes' => array('multiple' => 'multiple'),
    );
  }

  $form['example_entry']['entry_fieldset']['add_action_item'] = array(
      '#type' => 'submit',
      '#value' => t('Add Action Item'),
      '#submit' => array('action_add_one'),
      '#ajax' => array(
        'callback' => 'action_add_one_callback',
        'wrapper' => 'entry-fieldset-wrapper',
      ),
  );

  // ---------------  Add more text box ends ---------------------------------

  $form['example_entry']['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
  );

  return $form;
}

