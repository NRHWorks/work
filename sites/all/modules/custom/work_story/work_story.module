  }

  if (!in_array($creator, $mail_list)) {
    $mail_list[] = $creator;
  }

  $mail_to = "";

  foreach (array_unique($mail_list) as $uid) {
    $u = user_load($uid);
    if (isset($u->field_receive_email_notification['und']) &&
