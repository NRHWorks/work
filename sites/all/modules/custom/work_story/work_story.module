  $creator  = &$node->field_creator['und'][0]['uid'];
  $owner    = &$node->field_owner['und'][0]['uid'];
  $mail_list = array();

  foreach ($node->field_users['und'] as $u) {
    $mail_list[] = $u['uid'];
  }

  foreach ($client->field_users['und'] as $u) {
    $mail_list[] = $u['uid'];
  }

  foreach ($project->field_users['und'] as $u) {
    $mail_list[] = $u['uid'];
  }

  if (!in_array($owner, $mail_list)) {
